<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#eee">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin">

        <EditText
            android:id="@+id/mobile_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_bg"
            android:paddingLeft="?attr/actionBarSize"
            android:paddingStart="?attr/actionBarSize"
            android:paddingRight="0dp"
            android:paddingEnd="0dp"
            android:inputType="phone"
            android:hint="输入手机号码"
            android:textColorHint="#999"
            android:textSize="16sp"
            android:textColor="#333"/>

        <ImageView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:padding="16dp"
            android:src="@mipmap/phone_icon"
            android:scaleType="fitCenter"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginRight="8dp"
            >

            <EditText
                android:id="@+id/identify_code_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_bg"
                android:paddingLeft="?attr/actionBarSize"
                android:paddingStart="?attr/actionBarSize"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:hint="输入验证码"
                android:textColorHint="#999"
                android:inputType="numberSigned"
                android:textSize="16sp"
                android:maxLength="6"
                android:textColor="#333"/>

            <ImageView
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:padding="16dp"
                android:src="@mipmap/identify_code_icon"
                android:scaleType="fitCenter"/>

        </FrameLayout>

        <TextView
            android:id="@+id/send_icode_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:textSize="12sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="#fff"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/btn_deep_sky_blue"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin">

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_bg"
            android:paddingLeft="?attr/actionBarSize"
            android:paddingStart="?attr/actionBarSize"
            android:paddingRight="0dp"
            android:paddingEnd="0dp"
            android:hint="输入密码"
            android:textColorHint="#999"
            android:textSize="16sp"
            android:textColor="#333"
            android:inputType="textPassword" />

        <ImageView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:padding="16dp"
            android:src="@mipmap/password_icon"
            android:scaleType="fitCenter"/>

    </FrameLayout>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_bg_accent"
        android:textColor="#fff"
        android:text="注册"
        android:layout_margin="@dimen/default_margin"/>
</LinearLayout>